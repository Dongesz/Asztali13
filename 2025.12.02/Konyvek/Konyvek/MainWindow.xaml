<Window x:Class="Konyvek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Konyvek"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGrid" Grid.Column="1" SelectionChanged="dataGrid_SelectionChanged"/>

        <StackPanel Orientation="Vertical" Margin="10" Grid.Column="0">
            <Button Content="Könyvek betöltése" Margin="5" Click="Button_Click"></Button>
            <Button Content="Hány könyv van?" Margin="5" Click="Button_Click_1"/>
            <Button Content="Melyik a leghoszabb könyv?" Margin="5" Click="Button_Click_2"/>
            <Button Content="Átlag oldalszám" Margin="5" Click="Button_Click_3"/>
            <Button Content="Elérhető könyvek" Margin="5" Click="Button_Click_4"/>
            <Button Content="Csak címek listája" Margin="5" Click="Button_Click_5"/>
            <Button Content="Rendezés szerző szerint" Margin="5" Click="Button_Click_6"/>
            <ProgressBar x:Name="progressBar" Margin="5" Height="20" Minimum="0" Maximum="1000" Value="100"></ProgressBar>
        </StackPanel>

    </Grid>
</Window>
