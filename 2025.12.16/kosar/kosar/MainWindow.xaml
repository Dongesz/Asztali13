<Window x:Class="kosar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kosar"
        mc:Ignorable="d"
        Title="Kosárlabda Statisztikák" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5" >
            <Label Content="Csapat: " Margin="5"/>
            <ComboBox Width="100" Margin="5"/>
            <Label Content="Min.pontátlag: " Margin="5"/>
            <Slider Width="150" Margin="5" VerticalAlignment="Center"/>
            <CheckBox Content="15 pontátlag alattiak" Margin="5" VerticalAlignment="Center"/>
        </StackPanel>
        <DataGrid x:Name="dataGrid" Grid.Row="1"/>
        <WrapPanel Grid.Row="2" Margin="5">
            <Button Content="1 - Össze játékos"/>
        </WrapPanel>
    </Grid>
</Window>
