<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Urhajok" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGrid" Grid.Column="1" AutoGenerateColumns="True" ColumnWidth="*"/>
        <StackPanel Orientation="Vertical" Grid.Column="0" Background="DarkBlue">
            <Label Content="Urhajo Muveletek" FontSize="25" Foreground="white"/>
            <Button Content="Adatok betoltese" Margin="5" Click="AdatokBetoltese"/>
            <Button Content="Hány urhajo van?" Margin="5" Click="HanyUrhajo"/>
            <Button Content="Legnagyobb hatotav?" Margin="5" Click="LegnagyobbHatotav"/>
            <Button Content="Kik voltk sikeres kuldetesen?" Margin="5" Click="SikeresKuldetes"/>
            <Button Content="Atlagos legenysegszam?" Margin="5" Click="AtlagosLegenysegszam"/>
            <Button Content="Csoportosias gyartok szerint" Margin="5" Click="GyartokSzerintCsop"/>
        
        </StackPanel>
    </Grid>
</Window>
