<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Kep szerkeszto" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.RowSpan="2"/>
        <Menu Grid.RowSpan="2">
            <MenuItem Header="File">
                <MenuItem Header="Megnyitas" Click="Megnyitas"/>
                <MenuItem Header="Mentes" Click="Mentes"/>
                <MenuItem Header="Kilepes" Click="Kilepes"/>
            </MenuItem>
            <MenuItem Header="Nezet">
                <MenuItem Header="Nagyitas" Click="Nagyitas"/>
                <MenuItem Header="Kicsinyites" Click="Kicsinites"/>
            </MenuItem>
            <MenuItem Header="Muveletek">

            </MenuItem>


        </Menu>
        <ScrollViewer Margin="35,35,35,35" Grid.RowSpan="2">
            <Image x:Name="kep">
                <Image.RenderTransform>
                    <ScaleTransform x:Name="zoom" ScaleX="1" ScaleY="1" >

                    </ScaleTransform>
                </Image.RenderTransform>
            </Image>
        </ScrollViewer>
        <Slider x:Name="slider" Grid.Row="1" Minimum="0"  Maximum="100" Value="50" ValueChanged="Slider_ValueChanged"/>
    </Grid>
</Window>
