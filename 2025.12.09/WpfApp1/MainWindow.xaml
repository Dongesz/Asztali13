<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Grid.Column="1" x:Name="dataGrid" AutoGenerateColumns="True" ColumnWidth="*"/>
        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="10">
            <Button Content="Filmek betoltese" Click="FilmekBetoltese" Margin="5" Width="250px"/>
            <Button Content="Hany film van?" Click="FilmekSzama" Margin="5" Width="250px"/>
            <Button Content="Leghosszabb film?" Click="LeghosszabbFilm" Margin="5" Width="250px"/>
            <Button Content="Atlag ertekeles" Click="AtlagErtekeles" Margin="5" Width="250px"/>
            <Button Content="Csak sci-fi" Click="CsakScifi" Margin="5" Width="250px"/>
            <Button Content="Csak cimek" Click="CsakCim" Margin="5" Width="250px"/>

        </StackPanel>
        
    </Grid>
</Window>
